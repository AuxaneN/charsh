{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "ES6",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "client/node_modules/*"]
    },
    "rootDirs": ["./"],
    "outDir": "./build",
    "sourceMap": true
  },
  "include": ["./"],
  "exclude": ["node_modules", "**/node_modules", "dist", "./build"]
}
